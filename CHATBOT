        "\n",
        "\n",
        "def generate_excuse_llm(context, reason, audience):\n",
        "    prompt = f\"Write a short, polite, professional excuse message.\\nContext: {context}\\nAudience: {audience}\\nReason: {reason}\\nExcuse:\"\n",
        "    outputs = generator(\n",
        "        prompt,\n",
        "        max_new_tokens=80,\n",
        "        do_sample=True,\n",
        "        temperature=0.7,\n",
        "        truncation=True,\n",
        "        pad_token_id=tokenizer.eos_token_id\n",
        "    )\n",
        "    text = outputs[0][\"generated_text\"]\n",
        "\n",
        "    excuse = text.split(\"Excuse:\")[-1].strip()\n",
        "    if not excuse or len(excuse.split()) < 5:\n",
        "        excuse = f\"Dear {audience}, I was delayed due to {reason}. Iâ€™ll ensure everything continues smoothly.\"\n",
        "\n",
        "    return excuse"
      ],
      "metadata": {
        "id": "zH3AMIyFHsf5"
      },
      "execution_count": null,
      "outputs": []
    },
    {
      "cell_type": "code",
      "source": [
        "def create_proof_image(context, excuse_text, audience=\"Boss\", patient=\"User\", doctor=\"Dr. Smith\"):\n",
        "    img = Image.new(\"RGB\", (800, 400), color=\"white\")\n",
        "    draw = ImageDraw.Draw(img)\n",
        "    font = ImageFont.load_default()\n",
        "\n",
        "    if context == \"medical\":\n",
        "        draw.text((20, 20), f\"Doctor: {doctor}\", fill=\"black\", font=font)\n",
        "        draw.text((20, 60), f\"Patient: {patient}\", fill=\"black\", font=font)\n",
        "        draw.text((20, 120), \"Prescription:\", fill=\"black\", font=font)\n",
        "        draw.text((40, 160), excuse_text, fill=\"black\", font=font)\n",
        "        draw.text((20, 300), \"Signature: ____________\", fill=\"black\", font=font)\n",
        "        filename = \"prescription.png\"\n",
        "    else:\n",
        "        draw.text((20, 20), f\"Chat with {audience}\", fill=\"black\", font=font)\n",
        "        draw.text((20, 80), f\"You: Sorry, I can't make it.\", fill=\"black\", font=font)\n",
        "        draw.text((20, 120), f\"{audience}: {excuse_text}\", fill=\"black\", font=font)\n",
        "        filename = \"chat_proof.png\"\n",
        "\n",
        "    img.save(filename)\n",
        "    return filename\n"
      ],
      "metadata": {
        "id": "5rxuP4kXMXTC"
